#!/usr/bin/env python

import curses
import time

def getkey(stdscr):
    curses.curs_set(0)
    stdscr.addstr(0, 0, 'Press a key, any key!')
    stdscr.refresh()
    while True:
        key = stdscr.getch()
        if key != -1:
            break
    return key

if __name__ == "__main__":
    key = curses.wrapper(getkey)
    print('The curses keycode is ' +  str(key))
